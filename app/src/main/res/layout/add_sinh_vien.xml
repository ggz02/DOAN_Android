<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Thêm Sinh Viên" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="415dp"
        android:layout_height="529dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="39dp"
                android:text="Họ Tên :"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputHoTen"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/search_icon_background"
                android:ems="10"
                android:inputType="text"
                android:padding="10dp"
                android:textColorHint="@android:color/darker_gray" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="0dp"
                android:text="Ngày Sinh :"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputNgaySinh"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/search_icon_background"
                android:ems="10"
                android:inputType="text"
                android:padding="10dp"
                android:textColorHint="@android:color/darker_gray" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="18dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới Tính :"
                android:textSize="20sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/cbNam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/cbNu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Nữ"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="18dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa Chỉ :"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputDiaChi"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/search_icon_background"
                android:ems="10"
                android:inputType="text"
                android:padding="10dp"
                android:textColorHint="@android:color/darker_gray" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điện Thoại :"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputDienThoai"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/search_icon_background"
                android:ems="10"
                android:inputType="text"
                android:padding="10dp"
                android:textColorHint="@android:color/darker_gray" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="18dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email :"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputEmail"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/search_icon_background"
                android:ems="10"
                android:inputType="text"
                android:padding="10dp"
                android:textColorHint="@android:color/darker_gray" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="18dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khoa :"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spKhoa"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/white_rectangle_background" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tài Khoản :"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputTaiKhoan"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/search_icon_background"
                android:ems="10"
                android:inputType="text"
                android:padding="10dp"
                android:textColorHint="@android:color/darker_gray" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mật Khẩu :"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputMatKhau"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/search_icon_background"
                android:ems="10"
                android:inputType="text"
                android:padding="10dp"
                android:textColorHint="@android:color/darker_gray" />
        </TableRow>

    </LinearLayout>

    <Button
        android:id="@+id/btnReturn"
        android:layout_width="135dp"
        android:layout_height="35dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="48dp"
        android:background="@android:color/system_on_error_dark"
        android:text="Quay Lại"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="135dp"
        android:layout_height="35dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="44dp"
        android:background="@color/colorPrimary"
        android:text="Thêm"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>