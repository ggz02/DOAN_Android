<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Thêm Môn Học" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="415dp"
        android:layout_height="400dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginBottom="18dp">

            <TextView
                android:id="@+id/textView0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã Môn Học :"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputMaMH"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/search_icon_background"
                android:ems="10"
                android:inputType="text"
                android:padding="10dp"
                android:textColorHint="@android:color/darker_gray" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Môn Học :"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputTenMH"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/search_icon_background"
                android:ems="10"
                android:inputType="text"
                android:padding="10dp"
                android:textColorHint="@android:color/darker_gray" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="66dp"
            android:layout_marginTop="18dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="0dp"
                android:text="Học Kì :"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spHocKi"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/white_rectangle_background" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="46dp"
            android:layout_marginTop="18dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số Tín Chỉ :"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputSoTinChi"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/search_icon_background"
                android:ems="10"
                android:inputType="text"
                android:padding="10dp"
                android:textColorHint="@android:color/darker_gray" />


        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="96dp"
            android:layout_marginTop="18dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khoa :"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spKhoa"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/white_rectangle_background" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày Bắt Đầu :"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputNgayBD"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/search_icon_background"
                android:ems="10"
                android:inputType="text"
                android:padding="10dp"
                android:textColorHint="@android:color/darker_gray" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày Kết Thúc :"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputNgayKT"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/search_icon_background"
                android:ems="10"
                android:inputType="text"
                android:padding="10dp"
                android:textColorHint="@android:color/darker_gray" />

        </TableRow>


    </LinearLayout>

    <Button
        android:id="@+id/btnReturnMH"
        android:layout_width="135dp"
        android:layout_height="35dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="48dp"
        android:background="@android:color/system_on_error_dark"
        android:text="Quay Lại"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/btnAddMH"
        android:layout_width="135dp"
        android:layout_height="35dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="44dp"
        android:background="@color/colorPrimary"
        android:text="Thêm"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>